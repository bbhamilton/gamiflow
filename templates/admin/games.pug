extends admin-layout.pug

block title
  title Gamiflow - Admin Panel - Users

block content
  .container
    // end row
    .row
      .col-sm-12
        .card-box
          h4.m-t-0
            | Games &nbsp;
            a(href='admin/game/add/', class='btn btn-large btn-info') Add new game
          .table-responsive
            table.table.table-hover.mails.m-0.table.table-actions-bar
              thead
                tr
                  th(style='min-width: 95px;')
                    .checkbox.checkbox-primary.checkbox-single.m-r-15
                      input#action-checkbox(type='checkbox')
                      label(for='action-checkbox')
                        .btn-group.dropdown
                          button.btn.btn-default.btn-xs.dropdown-toggle.waves-effect.waves-light(type='button', data-toggle='dropdown', aria-expanded='false')
                            i.caret
                          ul.dropdown-menu(role='menu')
                            li
                              a(href='#') Send a message
                            li
                              a(href='#') Edit
                            li.divider
                            li
                              a(href='#')
                                span.text-danger Remove
                  th Game
                  th Author
                  th Players
                  th Created Date
                  th
              tbody
                each game in games
                  tr
                    td
                      .checkbox.checkbox-primary.m-r-15
                        input#checkbox2(type='checkbox')
                        label(for='checkbox2')
                      img.img-circle.thumb-sm(src='admin/images/users/avatar-2.jpg', alt='contact-img', title='contact-img')
                    td
                      a(href='/admin/game/edit/' + game.vanityUrl) #{game.vanityUrl}
                    td
                      a.text-muted(href='mailto:' + game.author.email) #{game.author.username}
                    td #{game.users.players}
                    td #{game.createdDate}
                    td
                      a(href='/game/' + game.vanityUrl, class='btn btn-default', target='_blank') show game
