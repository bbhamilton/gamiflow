extends admin-layout.pug

block title
  title Gamiflow - Admin Panel - Users

block content
  .container
    // end row
    .row
      .col-sm-12
        .card-box
          h4.m-t-0
            | Badges &nbsp;
            a(href='admin/badge/add', class='btn btn-large btn-info') Add new badge
          .table-responsive
            table.table.table-hover.mails.m-0.table.table-actions-bar
              thead
                tr
                  th(style='min-width: 95px;')
                    .checkbox.checkbox-primary.checkbox-single.m-r-15
                      input#action-checkbox(type='checkbox')
                      label(for='action-checkbox')
                        .btn-group.dropdown
                          button.btn.btn-default.btn-xs.dropdown-toggle.waves-effect.waves-light(type='button', data-toggle='dropdown', aria-expanded='false')
                            i.caret
                          ul.dropdown-menu(role='menu')
                            li
                              a(href='#') Send a message
                            li
                              a(href='#') Edit
                            li.divider
                            li
                              a(href='#')
                                span.text-danger Remove
                  th Badge
                  th Game
                  th Points
                  th Uploaded by
                  th Public
              tbody
                each badge in badges
                  tr
                    td
                      .checkbox.checkbox-primary.m-r-15
                        input#checkbox2(type='checkbox')
                        label(for='checkbox2')
                      img.img-circle.thumb-sm(src='admin/images/users/avatar-2.jpg', alt='contact-img', title='contact-img')
                    td
                      a(href='/admin/badge/edit/' + badge.name) #{badge.name}
                    td
                      if badge.game
                        a(href='/admin/game/edit/' + badge.game.name) #{badge.game.name}
                      else
                        | none
                    td #{badge.minPoints}
                    td
                      if badge.createdBy
                        a.text-muted(href='mailto:' + badge.createdBy.mail) #{badge.createdBy.username}
                      else
                        | none
                    td
                      if badge.public
                        input(type='checkbox', checked='', data-plugin='switchery', data-color='#64b0f2', data-size='small')
                      else
                        input(type='checkbox', data-plugin='switchery', data-color='#64b0f2', data-size='small')
