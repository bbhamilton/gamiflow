extends layout.pug

block title
  title Gamiflow - login

block content
  .jumbotron.small-jumbotron
    .container
      h3 Login
  .container
    .row
      .col-md-4.offset-md-4
        form(class='form-signin', method='post', action='/login')
          h2.form-signin-heading Please sign in
          label.sr-only(for='inputUsername') Username
          input#inputUsername.form-control(type='text', placeholder='Username', required='', autofocus='', name='username', value='admin')
          label.sr-only(for='inputPassword') Password
          input#inputPassword.form-control(type='password', placeholder='Password', required='', name='password', value='admin')
          .checkbox
            label
              input(type='checkbox', value='remember-me')
              |  Remember me
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

