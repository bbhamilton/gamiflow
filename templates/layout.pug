doctype html
html
  head
    block title
      title Gamiflow - gamification engine
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    link(href='/css/bootstrap.min.css', rel='stylesheet')
  body
    nav.navbar.navbar-static-top.navbar-dark.bg-inverse
      a.navbar-brand(href='#') Gamiflow
      ul.nav.navbar-nav
        li.nav-item.active
          a.nav-link(href='/')
            | Index
            span.sr-only (current)
        li.nav-item
          a.nav-link(href='/login') Login
        li.nav-item
          a.nav-link(href='/games') Games
        li.nav-item
          a.nav-link(href='/register') Register

    while message = flash.shift()
      .container
        .row
          div.alert(class='alert-' + message.type, role='alert')
            =message.message
    block content
    footer
      p Â© Gamiflow 2016
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js', type='text/javascript')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.7/js/tether.min.js', type='text/javascript')
    script(src='/js/bootstrap.min.js', type='text/javascript')
